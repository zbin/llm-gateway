{
  "extends": "../tsconfig/vue.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@llm-gateway/shared": ["../shared/src"],
      "@llm-gateway/shared/*": ["../shared/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
