{
  "name": "@llm-gateway/backend",
  "version": "0.2.4",
  "private": true,
  "description": "LLM Gateway Backend Service",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "dev:node": "tsx watch src/index.ts",
    "dev:node-simple": "node --loader tsx src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --minify",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit --noUnusedLocals false --noUnusedParameters false --noImplicitReturns false",
    "clean": "rm -rf dist",
    "fix:db": "bun run scripts/fix-database.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@aws-sdk/client-s3": "^3.940.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/static": "^8.0.2",
    "@google/generative-ai": "^0.24.1",
    "@llm-gateway/shared": "workspace:*",
    "@xenova/transformers": "^2.17.2",
    "dotenv": "^17.2.3",
    "fastify": "^5.2.0",
    "ip2region": "^2.3.0",
    "mysql2": "^3.15.3",
    "nanoid": "^5.0.9",
    "node-cron": "^4.2.1",
    "openai": "^6.9.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "sql.js": "^1.12.0",
    "tar": "^7.5.2",
    "tiktoken": "^1.0.22",
    "uuid": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/sql.js": "^1.4.9",
    "@types/tar": "^6.1.13",
    "typescript": "^5.7.2"
  }
}
