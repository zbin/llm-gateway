{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vue 3",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "jsx": "preserve",
    "jsxImportSource": "vue",

    "types": ["vite/client"],

    "isolatedModules": true,
    "useDefineForClassFields": true,

    "baseUrl": ".",
    "paths": {}
  }
}
