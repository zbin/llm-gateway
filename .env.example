PORT=3000
NODE_ENV=development
LOG_LEVEL=info
JWT_SECRET=your-secret-key-change-this-in-production
API_REQUEST_LOG_RETENTION_DAYS=3

# MySQL 数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=llm_gateway

# LLM Gateway 公网访问地址
# 如果部署在公网服务器上，请设置为实际的公网地址
# 例如: http://your-domain.com 或 http://your-ip:3000
# 此配置也可以在 Web UI 的系统设置页面中动态修改
PUBLIC_URL=http://localhost:3000

# 消息压缩配置 (可选)
# 定义在压缩历史消息时要保留的最新消息数量
# 默认值为 2，表示保留最后两条消息不进行压缩
# 如果设置为 5，则保留最后五条消息
KEEP_RECENT_MESSAGES=5

# S3 兼容存储备份配置 (可选)
# 支持 AWS S3、MinIO、Cloudflare R2、阿里云 OSS 等所有 S3 兼容存储
S3_ENDPOINT=http://localhost:9000
S3_BUCKET_NAME=llm-gateway-backups
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_access_key
S3_SECRET_ACCESS_KEY=your_secret_key
S3_FORCE_PATH_STYLE=true

# 常见服务配置示例：
# MinIO: S3_ENDPOINT=http://localhost:9000, S3_FORCE_PATH_STYLE=true
# Cloudflare R2: S3_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com, S3_FORCE_PATH_STYLE=false
# 阿里云 OSS: S3_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com, S3_FORCE_PATH_STYLE=false
# AWS S3: 留空 S3_ENDPOINT, S3_FORCE_PATH_STYLE=false

# 备份调度配置 (可选)
# 定时备份的 Cron 表达式，默认每天凌晨 2 点执行
BACKUP_SCHEDULE_CRON=0 2 * * *
# 备份保留天数，默认 30 天
BACKUP_RETENTION_DAYS=30
# 最大备份数量，默认 50 个
BACKUP_MAX_COUNT=50
# 是否包含日志数据，默认 false
BACKUP_INCLUDE_LOGS=false
# 备份临时目录，默认为项目目录下的 temp/backups
# BACKUP_TEMP_DIR=/path/to/temp/backups

